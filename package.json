{
  "name": "emgl",
  "version": "1.0.0",
  "description": "An emscripten WebGL experiment",
  "main": "index.js",
  "scripts": {
    "test": "make 'CFLAGS=-D RUN_TESTS' && ./bin/emgl",
    "watch:test": "watch 'clear && echo \"Compiling test...\" && npm t' ./src",
    "dev": "watch 'clear && echo 'Compiling...' && emcc src/main.cpp -o build/.temp.js && cat build/.temp.js | node' ./src",
    "build": "emcc src/main.cpp -o assets/build.emcc.js"
  },
  "author": "Greg Tatum",
  "license": "MIT",
  "devDependencies": {
    "watch": "0.17.1"
  }
}
